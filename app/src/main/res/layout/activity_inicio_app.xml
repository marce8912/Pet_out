<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_degra"
    tools:context=".Steps.InicioAppActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/carViewPaseos"
        android:layout_width="338dp"
        android:layout_height="144dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/colorTres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/txtpaseosApp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/boton_blanco"
            android:backgroundTint="@color/colorTres"
            android:gravity="center|center_horizontal"
            android:text="@string/txtpaseosApp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:autoSizeTextType="none" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/carViewGuarderia"
        android:layout_width="349dp"
        android:layout_height="177dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/colorTres"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtguarderiaApp"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:background="@drawable/boton_blanco"
            android:backgroundTint="@color/colorTres"
            android:gravity="center"
            android:text="@string/txtguarderiaApp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/paseosApp"
        android:layout_width="250dp"
        android:layout_height="66dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/boton_redondo"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/paseosApp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189" />

    <TextView
        android:id="@+id/guarderiaAPP"
        android:layout_width="250dp"
        android:layout_height="66dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/boton_redondo"
        android:gravity="center"
        android:text="@string/guarderiaApp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/carViewGuarderia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="82dp"
        android:layout_height="72dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paseando" />

    <TextView
        android:id="@+id/Servicios"
        android:layout_width="327dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="636dp"
        android:background="@drawable/boton_redondo"
        android:gravity="center"
        android:text="@string/InicioServicios"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="91dp"
        android:layout_height="87dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="412dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guarderia" />

</androidx.constraintlayout.widget.ConstraintLayout>